<Window x:Class="WebCrawler.DesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebCrawler.DesktopUI"
        mc:Ignorable="d"
        Title="Crawler Demo" Height="800" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Target Url" Margin="5"/>
            <TextBox  Name="UrlTextbox" Margin="5" Text="https://www.lightningreach.org/"/>
            <Button Content="Start Crawler" Click="Button_Click" Height="30"  Margin="5"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Name="ScrapingMonitorTextBlock" Margin="10"/>
    </Grid>
</Window>
